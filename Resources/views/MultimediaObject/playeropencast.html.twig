{% if multimediaObject.getProperty('opencast') is not empty %}
<div id="mh_player">
  <iframe src="{{ iframeurl(multimediaObject, not is_old_browser, true) }}"
          id="mh_iframe"
          style="border:0px #FFFFFF none; width:100%; height:950px;" 
          name="Opencast Matterhorn - Media Player" 
          scrolling="no" frameborder="0" marginheight="0px" marginwidth="0px" 
          webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen="true"
          >
  </iframe>
  <div class="mm_player">
    <div class="num_view">
      <div style="float:left">
        {% trans %}Video language{% endtrans %}: <span class="num_view_number">{{ (multimediaObject.getProperty('opencastlanguage')?(mm.getProperty('opencastlanguage')|lower):'en')|language_name }}</span>
      </div>
      {% trans %}Viewed{% endtrans %}:
      <span class="num_view_number">{{ multimediaObject.getNumview() }}</span>&nbsp;
      {% if 1 == multimediaObject.getNumview() %}{% trans %}time{% endtrans %}{% else %}{% trans %}times{% endtrans %}{% endif %}&nbsp;&nbsp;
    </div>
  </div>
  <div class="title">
    {{ multimediaObject.getSubtitle() }}
  </div>
  <p class="description">
    {{ multimediaObject.getDescription() }}
  </p>
   {% set last_date = date('1/1/1900') %}
   {% set last_precinct = '' %}
   {% set last_subseriestitle = '' %}
   {% set series_precinct = '' %}
   {% include 'PumukitWebTVBundle:MultimediaObject:multimediaobjectbody.html.twig' with {'multimediaObject': multimediaObject, 'last_date': last_date, 'last_precinct': last_precinct, 'last_subseriestitle': last_subseriestitle, 'template': multimediaObject.getSeries().getProperty('template'), 'is_series': false} %}
</div>
{% endif %}
